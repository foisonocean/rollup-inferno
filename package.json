{
  "name": "rollup-inferno",
  "version": "0.0.1",
  "description":
    "A boilerplate to build a Inferno.js app with TypeScript and Rollup.",
  "repository": "https://github.com/foisonocean/rollup-inferno.git",
  "author": "foisonocean <foisonocean@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-s clean dev",
    "clean": "rimraf .typescript-compile-cache dist",
    "dev": "cross-env NODE_ENV=development rollup -w -c",
    "build": "run-s clean build:rollup",
    "build:rollup": "cross-env NODE_ENV=production rollup -c",
    "lint": "run-p lint:ts",
    "lint:ts": "eslint \"**/*.@(js|jsx|ts|tsx)\"",
    "format": "run-p format:ts format:others",
    "format:ts": "prettier-eslint --write \"**/*.@(js|jsx|ts|tsx)\"",
    "format:others": "prettier --write \"**/*.@(json|gql|graphql)\"",
    "precommit": "lint-staged",
    "prepush": "run-s lint"
  },
  "lint-staged": {
    "**/*.@(js|jsx|ts|tsx)": ["prettier-eslint --write", "git add"],
    "**/*.@(json|gql|graphql)": ["prettier --write", "git add"]
  },
  "dependencies": {
    "inferno": "^4.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-inferno": "^4.0.0",
    "chokidar": "^2.0.2",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-inferno": "^7.6.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "rollup-plugin-uglify": "^3.0.0",
    "tslib": "^1.9.0",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^13.0.0"
  }
}
