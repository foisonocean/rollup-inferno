{
  "name": "rollup-inferno",
  "version": "0.0.1",
  "description": "A boilerplate to build a Inferno.js app with TypeScript and Rollup.",
  "repository": "https://github.com/foisonocean/rollup-inferno.git",
  "author": "foisonocean <hronro@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-s clean dev",
    "babel": "babel src -d lib",
    "clean": "rimraf .typescript-compile-cache dist",
    "dev": "cross-env NODE_ENV=development rollup -w -c",
    "build": "run-s clean build:rollup",
    "build:rollup": "cross-env NODE_ENV=production rollup -c",
    "lint": "run-p lint:ts",
    "lint:ts": "eslint --max-warnings=0 \"**/*.@(js|jsx|ts|tsx)\"",
    "format": "run-p format:ts format:others",
    "format:ts": "prettier-eslint --write \"**/*.@(js|jsx|ts|tsx)\"",
    "format:others": "prettier --write \"**/*.@(json|md|gql|graphql)\""
  },
  "lint-staged": {
    "**/*.@(js|jsx|ts|tsx)": [
      "prettier-eslint --write",
      "git add"
    ],
    "**/*.@(js|jsx|json|gql|graphql|yml|yaml|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "emotion": "^10.0.6",
    "inferno": "^7.1.1",
    "inferno-devtools": "^7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime-corejs2": "^7.3.1",
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "@typescript-eslint/parser": "^1.1.1",
    "babel-plugin-emotion": "^10.0.6",
    "babel-plugin-inferno": "^6.0.4",
    "chokidar": "^2.0.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-inferno": "^7.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "fast-async": "^6.3.8",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.3",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^4.0.3",
    "typescript": "^3.2.4"
  }
}
